<div class="container">
  <div class="row">
    <h1>Your Account Info</h1>
    <p></p>

    <%= form_for(@user) do |f| %>
      <table border="1">
        <tr>
          <th><%= f.label :name, 'Name' %></th>
          <td><%= f.text_field :name %></td>
        </tr>
        <tr>
          <th><%= f.label :email, 'Email' %></th>
          <td><%= f.text_field :email %></td>
        </tr>
        <tr>
          <th><%= f.label :password, 'Passoword' %></th>
          <td><%= f.password_field :password %></td>
        </tr>
        <tr>
          <th><%= f.label :password_confirmation, 'Password Again' %></th>
          <td><%= f.text_field :password_confirmation %></td>
        </tr>
      </table>
      <div class="">
        <%= f.submit 'Update', class:"btn btn-primary" %>
      </div>
    <% end %>

  </div>
</div>
